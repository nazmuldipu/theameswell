---
layout: base.njk
pagename: faq
permalink: "build/faq/index.html"
permalinkBypassOutputDir: true
canonical_href: https://www.theameswellhotel.com/faq/
---
{% from "macros.njk" import backToTop %}
{% from "macros.njk" import scaled_image %}
{% from "global-image.njk" import global_image %}

{% if pageCMS['top-banner'] and pageCMS['top-banner'].simple_article %}
    {% set banner = pageCMS['top-banner'].simple_article %}
{% endif %}
{% if pageCMS['faq-list'] and pageCMS['faq-list'].faq %}
    {% set faqList = pageCMS['faq-list'].faq %}
{% endif %}

{% if banner %}
    {% for item in pageCMS['top-banner'].simple_article %}
        <section id="pageHero" class="bg-ams-primary h-screen w-full grid grid-rows-1 justify-items-center items-center overflow-hidden">
            {% for img in item.image %}
                {{ global_image(img.global_image, imgClass = "min-h-screen min-w-full max-w-none") }}
            {% endfor %}
        </section>
    {% endfor %}
{% endif %}
<div class="w-full grid justify-items-center -mt-24 xmed:-mt-32 pt-8 xmed:pt-16 px-6 pb-16 bg-pattern--ams-grey overflow-hidden">
    {% if banner %}
        {% for item in pageCMS['top-banner'].simple_article %}
            <article class="w-full grid justify-items-center pt-4">
                <section class="w-full grid justify-items-center max-w-screen-lg">
                    <div class="pb-4 px-4 xmed:shadow-md xmed:-mt-10 xmed:p-10 bg-ams-white">
                        <h2 class="title-display text-2xl xmed:text-5xl pt-4 xmed:pt-0 pb-4 xmed:text-center">
                            {{item.title}}
                        </h2>
                        <div class="xmed:text-center text-lg tracking-wide cms-description">
                            {{item.description | safe}}
                        </div>
                    </div>
                </section>
            </article>
        {% endfor %}
    {% endif %}

    {% if faqList %}
        <article class="w-full grid justify-items-center pt-6 xmed:pt-16">
            <section class="w-full grid justify-items-center max-w-screen-xl">
                <div class="w-full pt-6 px-6 xmed:pt-8 xmed:px-8 shadow-md bg-ams-white">
                    {% for faq in faqList %}
                        <h3 class="title-display text-center text-2xl xmed:text-4xl mb-6 xmed:mb-8">
                            <a href="#{{ faq.slug }}" class="border-b border-ams-primary">{{ faq.title }}</a>
                        </h3>
                    {% endfor %}
                </div>
            </section>
        </article>
    {% endif %}
</div>

{% if faqList %}
    <div class="w-full grid justify-items-center relative -mt-4 xmed:-mt-8 overflow-hidden">
        {{ backToTop( 'Scroll to top' ) }}
        <section class="w-full grid justify-items-center max-w-screen-xl bg-white py-8 px-6 xmed:px-8 mt-4 xmed:mt-8">
            {% for faq in faqList %}
                <article class="w-full pt-14 -mt-6 pb-0 xmed:py-8" id="{{ faq.slug }}">
                    <section class="mb-5 xmed:mt-8">
                        <header>
                            <h2 class="font-serif text-ams-primary text-xl xmed:text-3xl pb-0 xmed:pb-6 xmed:text-center">
                                {{ faq.title | safe }}
                            </h2>
                        </header>
                        {% for list in faq.list %}
                            <figure class="mx-4 xmed:mx-0 py-3 xmed:py-4 max-w-screen-xl text-left border-b-2 border-ams-sand">
                                <input
                                class="toggleable__control absolute hidden border-0 h-px -m-px overflow-hidden p-0 w-px"
                                id="{{ faq.slug }}-{{ list.question }}"
                                type="checkbox"
/>
                                <label class="toggleable__label xmed:text-lg font-bold tracking-tight text-ams-primary cursor-pointer block relative pr-8"
                                for="{{ faq.slug }}-{{ list.question }}">
                                    {{ list.question | safe }}
                                </label>
                                <figcaption class="toggleable__content max-h-0 overflow-hidden tracking-wide relative">
                                    <p class="pl-3 break-all xmed:pl-8 border-l-4 xmed:border-l-8 border-ams-primary mt-3 xmed:mt-4">
                                        {{ list.answer | safe }}
                                    </p>
                                </figcaption>
                            </figure>
                        {% endfor %}
                    </section>
                </article>
            {% endfor %}
        </section>
    </div>
{% endif %}
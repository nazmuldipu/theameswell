{% from "icons.njk" import svgicon %}
{% from "buttons.njk" import primaryButton %}
{% from "macros.njk" import scaled_image, subfooter__form %}

<section id="pageHero" class="bg-ams-primary min-h-screen w-full grid xmed:grid-rows-hero-home justify-items-center overflow-hidden">
    {{scaled_image(banner_image)}}
</section>

<div class="w-full grid justify-items-center -mt-16 xmed:-mt-32 pt-8 xmed:pt-16 px-6 pb-12 bg-pattern--ams-grey">
    <article class="w-full grid justify-items-center">
        <section class="w-full grid justify-items-center max-w-screen-lg">
            <div class="pb-4 px-4 shadow-md xmed:-mt-10 xmed:p-10 bg-ams-white">
                <h2 class="title-display text-2xl xmed:text-5xl pt-4 xmed:pt-0 pb-4 xmed:pb-8 xmed:text-center">
                    Enhance Your Stay
                </h2>
                <div class="xmed:text-center text-lg leading-6 tracking-wide">
                    Looking for a little something extra on your next visit to Silicon Valley? Treat yourself to one of these exclusive offers from The Ameswell Hotel.    
                </div>
            </div>
        </section>
    </article>
</div>
<section class="grid justify-items-center w-full bg-ams-base pb-8 xmed:pt-8">
    {% for item in offers %}
        <section class="mb-5 xmed:mt-8">
            <figure class="max-w-screen-xl xmed:grid xmed:items-center xmed:grid-cols-2 gap-4 xmed:gap-28 xmed:p-8 xmed:bg-ams-white xmed:shadow-md">
                <figcaption class="xmed:order-2 grid justify-items-center pt-4 xmed:pt-0">
                    {{ scaled_image(item.image) }}
                </figcaption>
                <figcaption class="mt-8 xmed:mt-0 mx-6 p-4 xmed:p-0 shadow-md xmed:shadow-none bg-ams-white xmed:order-1">
                    <header>
                        <h2 class="title-display text-3xl pb-6">
                            {{ item.title | safe }}
                        </h2>
                    </header>
                    <p class="mb-4 xmed:mb-12">
                        {{ item.p1 }}
                    </p>
                    <p class="inline-block border-b border-ams-gold mx-4">
                        {{ primaryButton(item.link, 'Book a Room', 'inline-block pb-1 -mx-4 text-ams-gold font-serif tracking-wide button--primary button text-xl', 'a', true) }}
                    </p>
                </figcaption>
            </figure>
        </section>
    {% endfor %}
</section>

{{subfooter__form(data.subfooter_image, maxWidth='max-w-screen-xl')}}

<div class="bg-ams-primary w-full">
    <div class="bg-pattern--ams-grey w-full h-20 my-4 hidden xmed:block"></div>
</div>
{% from "icons.njk" import svgicon %}
{% from "buttons.njk" import primaryButton %}

<div id="pageHero" class="bg-ams-primary bg-hero--offers-xmed xmed:bg-hero--offers bg-cover bg-top min-h-screen w-full grid xmed:grid-rows-hero-home justify-items-center pt-28 xmed:pt-0"></div>
<div class="w-full grid justify-items-center -mt-16 xmed:-mt-32 pt-8 xmed:pt-16 px-8 pb-16 bg-pattern--ams-grey">
    <article class="w-full grid justify-items-center pt-4">
        <section class="w-full grid justify-items-center max-w-screen-lg">
            <div class="pb-4 px-4 shadow-md xmed:-mt-10 xmed:p-10 bg-ams-white">
                <h2 class="title-display text-2xl xmed:text-5xl pt-4 xmed:pt-0 pb-4 xmed:pb-8 xmed:text-center">
                    Enhance Your Stay
                </h2>
                <div class="xmed:text-center text-lg leading-6 tracking-wide">
                    Looking for a little something extra on your next visit to Silicon Valley? Treat yourself to one of these exclusive offers from The Ameswell Hotel.    
                </div>
            </div>
        </section>
    </article>
</div>
<section class="grid justify-items-center w-full bg-ams-base pb-8 xmed:pt-8">
    {% for item in offers %}
        <section class="mb-5 xmed:mt-8">
            <figure class="max-w-screen-xl xmed:grid xmed:items-center xmed:grid-cols-2 gap-4 xmed:gap-28 xmed:p-8 xmed:bg-ams-white xmed:shadow-md">
                <figcaption class="xmed:order-2 grid justify-items-center pt-4 xmed:pt-0">
                    <img src="{{ item.image }}.jpg" alt="{{ item.imgalt }}">
                </figcaption>
                <figcaption class="mt-8 xmed:mt-0 mx-4 p-4 xmed:p-0 shadow-md xmed:shadow-none bg-ams-white xmed:order-1">
                    <header>
                        <h2 class="title-display text-3xl pb-6">
                            {{ item.title | safe }}
                        </h2>
                    </header>
                    <p class="mb-4 xmed:mb-12">
                        {{ item.p1 }}
                    </p>
                    <p class="inline-block border-b border-ams-gold mx-4">
                        {{ primaryButton(item.link, 'Book Now', 'inline-block pb-1 -mx-4 text-ams-gold font-serif tracking-wide button--primary button text-xl') }}
                    </p>
                </figcaption>
            </figure>
        </section>
    {% endfor %}
</section>
<div class="grid justify-items-center bg-ams-primary w-full p-8">
    <article class="max-w-screen-lg p-8 bg-ams-white w-full">
        <section class="xmed:grid xmed:grid-cols-2 xmed:gap-4">
            <header>
                <h2 class="title-display text-2xl pt-4 pb-4">
                    Join Our A-List
                </h2>
                <p>
                    You will be the first to hear about events and promotions.
                </p>
            </header>
            <form-sender data-type="alist">
                <form class="pt-4">
                    <div class="floating-input mb-4 p-2 bg-ams-label shadow-md text-ams-primary text-xs relative">
                        <input required="required" type="text" id="firstName" name="firstName" placeholder="John" class="border-0 border-b-2 border-ams-label bg-ams-label text-base w-full p-3 h-8 focus:outline-none focus:ring-transparent focus:border-ams-label" />
                        <label for="firstName" class="absolute top-0 left-0 px-3 py-5 h-full pointer-events-none transform origin-left transition-all duration-100 ease-in-out">FIRST NAME *</label>
                    </div>
                    <div class="floating-input mb-4 p-2 bg-ams-label shadow-md text-ams-primary text-xs relative">
                        <input required="required" type="text" id="lastName" name="lastName" placeholder="Galen" class="border-0 border-b-2 border-ams-label bg-ams-label text-base w-full p-3 h-8 focus:outline-none focus:ring-transparent focus:border-ams-label" />
                        <label for="lastName" class="absolute top-0 left-0 px-3 py-5 h-full pointer-events-none transform origin-left transition-all duration-100 ease-in-out">LAST NAME *</label>
                    </div>
                    <div class="floating-input mb-4 p-2 bg-ams-label shadow-md text-ams-primary text-xs relative">
                        <input required="required" type="text" id="email" name="email" placeholder="johnglenn@example.com" class="border-0 border-b-2 border-ams-label bg-ams-label text-base w-full p-3 h-8 focus:outline-none focus:ring-transparent focus:border-ams-label" />
                        <label for="email" class="absolute top-0 left-0 px-3 py-5 h-full pointer-events-none transform origin-left transition-all duration-100 ease-in-out">EMAIL *</label>
                    </div>
                    {{ primaryButton("#", 'Join the A-List', 'submit__button inline-block py-2 px-8 bg-ams-gold text-ams-white font-serif tracking-wide', 'button') }}
                    <div class="ajax__status text-ams-primary text-ams-green text-rose-600 text-xs pt-2 hidden"></div>
                </form>
            </form-sender>
        </section>
    </article>
</div>
<div class="bg-ams-primary w-full">
    <div class="bg-pattern--ams-grey w-full h-20 my-4 hidden xmed:block"></div>
</div>
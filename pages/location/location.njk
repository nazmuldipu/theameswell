---
layout: base.njk
pagename: location
permalink: "build/location/index.html"
permalinkBypassOutputDir: true
---
{% from "macros.njk" import scaled_image %}
{% from "global-image.njk" import global_image %}

{% if pageCMS['top-banner'] and pageCMS['top-banner'].simple_article %}
    {% for item in pageCMS['top-banner'].simple_article %}
<section id="pageHero" class="bg-ams-primary h-screen w-full grid grid-rows-1 justify-items-center items-start overflow-hidden">
    {% for img in item.image %}
        {{ global_image(img.global_image) }}
    {% endfor %}
</section>

<div class="w-full grid justify-items-center -mt-24 xmed:-mt-32 pt-8 xmed:pt-16 px-6 pb-12 bg-pattern--ams-grey">
    <article class="w-full grid justify-items-center">
        <section class="w-full grid justify-items-center max-w-screen-lg">
            <div class="pb-4 px-4 shadow-md xmed:-mt-10 xmed:p-8 bg-ams-white">
                <h2 class="title-display text-2xl xmed:text-5xl pt-4 xmed:pt-0 pb-4 xmed:text-center">
                    {{item.title}}
                </h2>
                {% for link in item.links %}
                    <div class="text-center hidden xmed:block">
                        <a href="https://goo.gl/maps/UBPsrp6kvzVFc8BC7" target="_blank" rel="noreferrer" class="text-ams-cyan underline font-bold">800 Moffett Boulevard, Mountain View, CA 94043</a>
                    </div>
                {% endfor %}
                
                <br class="hidden xmed:block">
                <div class="xmed:text-center cms-description">
                    {{item.description | safe}}
                </div>
            </div>
        </section>
    </article>
</div>
{% endfor %}
{% endif %}
{% if pageCMS['categories'] and pageCMS['categories'].location_category %}

<div id="location-component" data-categories="{{pageCMS['categories'].location_category | stringify}}" class="location-component grid xmed:justify-items-center w-full bg-ams-base pt-8 xmed:pb-8">

    <article class="p-0 xmed:mt-4 xmed:mb-4">
        <section id="desktop_component" class="max-w-screen-xl grid xmed:grid-cols-50-50 gap-4 xmed:p-4">
            <div>
                <div id="titleBox" data-pp="10" class="xmed:pt-8 px-6 xmed:p-10 xmed:bg-ams-white xmed:shadow-md"></div>
                <nav class="flex flex-row items-center relative m-auto w-max py-2 top-14 xmed:-top-4 px-10 bg-ams-white shadow-md z-20">
                    <button id="previousCategory" class="carousel-button-prev inline-block w-4 h-4 transform rotate-45 justify-self-end border-b-2 border-l-2 border-ams-gold focus:outline-none -indent-xl overflow-hidden">
                        previous
                    </button>
                    <span id="navTitle" class="uppercase text-base text-ams-gold font-bold px-10"></span>
                    <button id="nextCategory" class="carousel-button-next inline-block w-4 h-4 transform rotate-45 justify-self-start border-t-2 border-r-2 border-ams-gold focus:outline-none -indent-xl overflow-hidden">
                        next
                    </button>
                </nav>
                <div id="subCategories" class="mt-10 hidden xmed:block">                    
                </div>
            </div>
            <div id="categoryMap" class="sticky top-20 h-800"></div>
        </section>
        <section class="xmed:hidden">
            <div class="relative">
                <div class="absolute w-full bottom-8 z-10">
                    <div class="bg-ams-white mx-6">
                        <div id="subCategory" class="overflow-hidden"> </div>

                        <div>
                            <div class="z-10 flex absolute bg-button w-9 h-9 left-3 bottom-3 justify-center items-center">
                                <button id="mob_prev" class="carousel-button-prev w-4 h-4 transform rotate-45 border-b-2 border-l-2 ml-2 focus:outline-none -indent-xl overflow-hidden" tabindex="0" aria-label="Previous slide" aria-controls="swiper-wrapper-6fdf19d53630b5ef">
                                    previous
                                </button>
                            </div>

                            <div class="z-10 flex absolute bg-button w-9 h-9 right-3 bottom-3 justify-center items-center">
                                <button id="mob_next" class="carousel-button-next w-4 h-4 transform rotate-45 border-t-2 border-r-2 mr-2 focus:outline-none -indent-xl overflow-hidden" tabindex="0" aria-label="Next slide" aria-controls="swiper-wrapper-6fdf19d53630b5ef">
                                    next
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                 <div id="subCategoryMap" class="w-full h-184 border-0 xmed:hidden" >
                </div>
            </div>
        </section>
    </article>
</div>

{% endif %}
        <meta charset="utf-8" />
        {% if meta_description %}
            <meta name="description" content="{{meta_description}}">
        {% endif %}
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% if noindex %}
            <meta name="robots" content="noindex">
        {% endif %}
        <title>{{meta_title}}</title>
        <link rel="canonical" href="{{ canonical_href }}" />
        <link rel="icon" href="favicon.svg" type="image/svg+xml">
        <link rel="alternate icon" href="favicon.ico">
        <!-- start open graph meta tags -->
        <meta property="og:title" content="{{ meta_title }}">
        <meta property="og:site_name" content="The Ameswell Hotel">
        <meta property="og:description" content="{{ meta_description }}">
        <meta property="og:type" content="website">
        <meta property="og:url" content="{{ canonical_href }}">
        <meta property="og:image" content="images/homepage-video-bg-1_1200.jpg">
        <meta property="og:image:width" content="1200">
        <meta property="og:image:height" content="510">
        <!-- end open graph meta tags -->
<!-- start critical css -->
        {% if critical_css %}
        <style>
            {{ critical_css | include }}
        </style>
        {% endif %}
<!-- end critical css -->
<!-- start sync css -->
        {% if sync_css %}
            <link rel="stylesheet" type="text/css" href="{{sync_css}}">
        {% endif %}
<!-- end sync css -->
<!-- start image preloads -->
    {% if preload_images %}
        {% for image in preload_images %}
            <link rel="preload" href="{{image.href}}" as="image" media="{{image.media}}">
        {% endfor %}
    {% endif %}
<!-- end image preloads -->
<!-- start font preloads -->
        {% if data.preload_fonts %}
            {% for font in data.preload_fonts %}
                <link rel="preload" href="{{font.href}}" as="font" type="{{font.type}}" crossorigin>
            {% endfor %}
        {% endif %}
<!-- end font preloads -->
<!-- start scripts -->
        {% if defer_js %}
            <script src="{{defer_js}}" defer></script>
        {% endif %}
        {% if async_js %}
            <script src="{{async_js}}" async></script>
        {% endif %}
        {% if module_js %}
            <script src="{{module_js}}" type="module"></script>
        {% endif %}
        {% if sync_js %}
            <script src="{{sync_js}}"></script>
        {% endif %}
<!-- end scripts -->
    </head>
    <body class="preload page-{{pagename}} grid justify-items-center bg-ams-white text-base sans">
        <!-- Google Tag Manager (noscript) -->
        <noscript>
            <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KKQNLKM" height="0" width="0" style="display:none;visibility:hidden"></iframe>
        </noscript>
        <!-- End Google Tag Manager (noscript) -->
        {% include "_page-header.njk" %}

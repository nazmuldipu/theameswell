---
layout: base.njk
pagename: index
permalink: "build/index.html"
permalinkBypassOutputDir: true
---
{% from "videos.njk" import lazyvideo %}
{% from "buttons.njk" import primaryButton %}
{% from "component_carousel.njk" import cms_rooms_carousel,
cms_homepage_offers_carousel %}
{% from "media-carousel.njk" import media_carousel, special_carousel, homepage_art_carousel, press_carousel %}
{% from "icons.njk" import svgicon %}
{% from "macros.njk" import scaled_image,
offersArticle,
subfooter__form,
cms_description %}
{% from "svgicon.njk" import svg_icon %}
{% from "global-image.njk" import global_image %}

{% if pageCMS['top-banner'] and pageCMS['top-banner'].simple_article %}
    {% for item in pageCMS['top-banner'].simple_article %}
        <section id="pageHero" class="bg-ams-primary min-h-screen bg-cover bg-center w-full grid grid-rows-home-hero justify-items-center">
            {% for img in item.image %}
                {{ global_image(img.global_image) }}
            {% endfor %}
            <header class="grid xmed:items-end">
                <h1 class="title--1 text-ams-white text-2xl xmed:text-4xl uppercase text-center pt-28 xmed:pt-0 cms-description">
                    {{item.description | safe}}
                </h1>
            </header>
            <div class="pt-16">
                {{svg_icon("logo_2", width="590", height="160", sclass="hidden xmed:block fill-current text-ams-white w-80")}}
            </div>
        </section>
    {% endfor %}
{% endif %}
{% if pageCMS['top-article'] and pageCMS['top-article'].simple_article %}
    {% for item in pageCMS['top-article'].simple_article %}
        <div class="grid justify-items-center w-full bg-ams-base">
            <article class="pt-4 xmed:mb-10 xmed:px-4 xmed:mt-4 bg-ams-white xmed:bg-ams-base">
                <section class="grid justify-items-center max-w-screen-xl xmed:px-4">
                    <div class="order-2 xmed:order-1">
                        {% for img in item.image %}
                            {{ global_image(img.global_image) }}
                        {% endfor %}
                    </div>
                    <div class="order-1 xmed:order-2 z-0 max-w-screen-lg mx-3 pb-4 px-8 xmed:shadow-md xmed:-mt-10 xmed:p-10 bg-ams-white">
                        <h2 class="title-display text-2xl pt-4 xmed:pt-0 pb-4 xmed:text-center">
                            {{item.title}}
                        </h2>
                        <div class="xmed:text-center text-ams-primary">
                            {{cms_description(item.description)}}
                        </div>
                        <div class="pt-4 pb-4 xmed:pb-0 xmed:text-center">
                            {% for cta in item.links %}
                                {% set link = cta.action%}
                                <a href="{{link.url}}" class="segment__cta segment__cta--gold relative text-ams-gold font-serif-display uppercase text-xs xmed:text-lg">{{link.copy | safe}}</a>
                            {% endfor %}
                        </div>
                    </div>
                </section>
            </article>
        </div>
    {% endfor %}
{% endif %}

<!--Rooms-and-offers-widget-->
<section class="w-full bg-pattern--ams-grey xmed:pb-24 z-10">
    <section class="max-w-7xl mx-auto px-6">
        <article class="grid grid-cols-1 xmed:grid-cols-3 gap-0 xmed:gap-8 py-4 xmed:py-8">
            <aside>
                <div class="shadow-md mb-9 xmed:mb-0 p-4 xmed:p-10 bg-ams-white">
                    {% if pageCMS['rooms-left'] and pageCMS['rooms-left'].simple_article %}
                        {% for item in pageCMS['rooms-left'].simple_article %}
                            <h2 class="title-display text-2xl xmed:text-3xl pb-4">
                                {{item.title}}
                            </h2>
                            <div class="text-ams-primary text-md">
                                {{cms_description(item.description)}}
                            </div>
                            {% for data in item.links %}
                                {% set link = data.action %}
                                {% if link.for_desctop %}
                                    <nav class="pt-7 pb-2 hidden xmed:block xmed:text-center">
                                        <a href="{{link.url}}" class="segment__cta segment__cta--gold relative text-ams-gold font-serif-display uppercase">{{link.copy|safe}}</a>
                                    </nav>
                                {% endif %}
                                {% if not link.for_desctop %}
                                    <nav class="pt-7 pb-2 xmed:hidden xmed:text-center">
                                        <a href="{{link.url}}" class="segment__cta segment__cta--gold relative text-ams-gold font-serif-display uppercase text-xs xmed:text-lg">{{link.copy|safe}}</a>
                                    </nav>
                                {% endif %}
                            {% endfor %}
                        {% endfor %}
                    {% endif %}
                </div>
            </aside>
            <aside class="xmed:col-span-2">
                <figure class="w-full max-w-screen-xl overflow-hidden shadow-md bg-ams-white pb-4 px-0">
                    {% if pageCMS['rooms-right'] and pageCMS['rooms-right'].rooms %}
                        {{ cms_rooms_carousel(pageCMS['rooms-right'].rooms) }}
                    {% endif %}
                </figure>
            </aside>
        </article>

        <article class="grid grid-cols-1 xmed:grid-cols-3 gap-0 xmed:gap-8 py-4 xmed:pb-12">
            <aside>
                {% if globalCMS['offers-article'] and globalCMS['offers-article'].simple_article %}
                    {% for item in globalCMS['offers-article'].simple_article %}
                        {{offersArticle(item)}}
                    {% endfor %}
                {% endif %}
            </aside>
            <aside class="xmed:col-span-2">
                <figure class="w-full max-w-screen-xl overflow-hidden shadow-md bg-ams-white py-4 px-0">
                    {% if globalCMS['offers'] and globalCMS['offers'].offers %}
                        {{ cms_homepage_offers_carousel(globalCMS['offers'].offers) }}
                    {% endif %}
                </figure>
            </aside>
        </article>
    </section>
</section>
<!--Rooms-and-offers-widget end-->

<div class="bg-ams-primary w-full grid justify-items-center pt-0 xmed:pt-24 pr-4 pl-4 xmed:-mt-24 relative z-0">
    <article class="p-4 w-full max-w-screen-lg">
        {% if pageCMS['restaurants-intro'] and pageCMS['restaurants-intro'].simple_article %}
            {% for item in pageCMS['restaurants-intro'].simple_article %}
                <h2 class="title-display text-2xl xmed:text-4xl py-4 text-ams-white text-left">
                    {{item.title}}
                </h2>
                <div class="pb-6 text-ams-white text-left cms-description">
                    {{item.description | safe}}
                </div>
                <div class="text-left">
                    {% for ac in item.links %}
                        {% set cta = ac.action %}
                        {% if cta.type == 'desktop' %}
                            <a href="{{cta.url}}" class="segment__cta segment__cta--white relative text-ams-white font-serif-display uppercase hidden xmed:inline-block">{{cta.copy}}</a>
                        {% endif %}
                        {% if cta.type == 'mobile' %}
                            <a href="{{cta.url}}" class="segment__cta segment__cta--white relative text-ams-white font-serif-display uppercase xmed:hidden text-xs xmed:text-lg">{{cta.copy}}</a>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endfor %}
        {% endif %}
        <section class="pt-9 xmed:grid xmed:grid-cols-3 xmed:gap-4 xmed:justify-between xmed:items-start">
            {% if pageCMS['restaurants'] and pageCMS['restaurants'].simple_article %}
                {% for item in pageCMS['restaurants'].simple_article %}
                    <figure class="grid grid-cols-1  gap-4 items-center mb-6">
                        {% for img in item.image %}
                            {{ global_image(img.global_image) }}
                        {% endfor %}
                        <figcaption class="text-ams-white xmed:px-8 order-1 xmed:order-2">
                            <header class="text-left xmed:text-center">
                                <h3 class="segment__cta segment__cta--green relative inline-block mb-4 text-ams-white">
                                    {% if item.links %}
                                        {% for cta in item.links %}
                                            {% set action = cta.action %}
                                            <a href="{{action.url}}">{{item.title}}</a>
                                        {% endfor %}
                                    {% endif %}
                                </h3>
                            </header>
                            <div class="text-left xmed:text-center cms-description">
                                {{item.description|safe}}
                            </div>
                        </figcaption>
                    </figure>
                {% endfor %}
            {% endif %}
        </section>
    </article>
</div>

{% if pageCMS['middle-article-1'] and pageCMS['middle-article-1'].simple_article %}
    {% for item in pageCMS['middle-article-1'].simple_article %}
        <div class="grid justify-items-center w-full bg-ams-base">
            <article class="xmed:mt-4 xmed:mb-10 xmed:px-4">
                <section class="grid justify-items-center max-w-screen-lg xmed:px-4">
                    <div class="hidden xmed:block mx-4 xmed:mx-0 bg-ams-white xmed:bg-ams-base">
                        {% for img in item.image %}
                            {{ global_image(img.global_image) }}
                        {% endfor %}
                    </div>
                    <div class="xmed:-mt-10 xmed:mx-0 mx-6 mt-12 mb-12 xmed:mb-0 p-6 xmed:p-10 z-0 max-w-screen-xmed xmed:shadow-md bg-ams-white">
                        <h2 class="title-display text-2xl pt-4 xmed:pt-0 pb-4 xmed:text-center">
                            {{item.title}}
                        </h2>
                        <div class="xmed:text-center cms-description">
                            {{item.description | safe}}
                        </div>
                        <div class="pt-4 pb-4 xmed:pb-0 xmed:text-center">
                            {% if item.links %}
                                {% for cta in item.links %}
                                    {% set action = cta.action %}
                                    <a href="{{action.url}}" class="segment__cta segment__cta--gold relative text-ams-gold font-serif-display uppercase text-xs xmed:text-lg">{{action.copy}}</a>
                                {% endfor %}
                            {% endif %}
                        </div>
                    </div>
                    <div class="xmed:hidden bg-ams-white xmed:bg-ams-base">
                        {% for img in item.image %}
                            {{ global_image(img.global_image) }}
                        {% endfor %}
                    </div>
                </section>
            </article>
        </div>
    {% endfor %}
{% endif %}
{% if pageCMS['middle-article-2'] and pageCMS['middle-article-2'].simple_article %}
    {% for item in pageCMS['middle-article-2'].simple_article %}
        <div class="grid justify-items-center w-full bg-ams-base">
            <article class="py-4 xmed:px-4 my-4">
                <section class="max-w-screen-lg xmed:grid xmed:grid-cols-auto-600 gap-4 xmed:p-8 xmed:bg-ams-white xmed:shadow-md">
                    <figure class="xmed:hidden mx-6 my-4">
                        {% for img in item.image %}
                            {{ global_image(img.global_image) }}
                        {% endfor %}
                    </figure>
                    <div class="mx-6 xmed:mx-0 mb-8 xmed:mb-0 p-4 xmed:p-0 shadow-md xmed:shadow-none bg-ams-white">
                        <h2 class="title-display text-2xl pt-4 pb-4">
                            {{item.title}}
                        </h2>
                        <div>
                            {{item.description | safe}}
                        </div>
                        <div class="pt-4 pb-4">
                            {% if item.links %}
                                {% for cta in item.links %}
                                    {% set action = cta.action %}
                                    <a href="{{action.url}}" class="segment__cta segment__cta--gold relative text-ams-gold font-serif-display uppercase text-xs xmed:text-lg">{{action.copy}}</a>
                                {% endfor %}
                            {% endif %}
                        </div>
                    </div>
                    <figure class="hidden xmed:block">
                        {% for img in item.image %}
                            {{ global_image(img.global_image) }}
                        {% endfor %}
                    </figure>
                </section>
            </article>
        </div>
    {% endfor %}
{% endif %}
<div class="segment-outer grid bg-pattern--ams-grey xmed:px-4 xmed:justify-items-center py-9 xmed:pt-24 xmed:pb-28">
    <article class="xmed:bg-ams-base w-full text-ams-primary hidden">
        {% for event in data.events %}
            {% if event.showIndexPage %}
                {% set imgObj = {"artDirection": [
                    {
                        "classes": "image-loader",
                        "media": "(min-width:900.1px)",
                        "sizes": "100vw",
                        "type": "jpg",
                        "src": event.image,
                        "alt": "The Ameswell hotel exterior",
                        "intrinsicwidth": "800"
                    },
                    {
                        "classes": "image-loader",
                        "media": "(max-width:900px)",
                        "sizes": "100vw",
                        "type": "jpg",
                        "src": event.image,
                        "alt": "The Ameswell hotel exterior",
                        "intrinsicwidth": "800"
                    }
                    ], classes: 'w-full h-80 object-cover event_id_' + event.id }%}

                {{ scaled_image(imgObj) }}
            {% endif %}
        {% endfor %}
    </article>
    <article id="happenings" class="segment-inner xmed:grid items-start w-full xmed:grid-cols-3 xmed:gap-8">
        {% if pageCMS['happenings-intro'] and pageCMS['happenings-intro'].simple_article %}
            {% for item in pageCMS['happenings-intro'].simple_article %}
                <section class="mb-8 shadow-md mx-6 xmed:mx-0 xmed:px-0">
                    <div class="shadow-md p-4 pb-8 xmed:p-8 bg-ams-white">
                        <h2 class="title-display text-2xl font-serif font-medium py-4">
                            {{item.title}}
                        </h2>
                        <div class="text-base xmed:text-lg font-sans text-ams-primary cms-description">
                            {{item.description | safe}}
                        </div>
                        {% if item.links %}
                            {% for cta in item.links %}
                                {% set action = cta.action %}
                                <div class="mt-10 pb-2 text-center xmed:block xmed:text-lg font-serif font-medium">
                                    <a href="{{action.url}}" class="py-4 px-4 bg-ams-gold text-ams-white font-serif tracking-wide button--primary button">{{action.copy}}</a>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </section>
            {% endfor %}
        {% endif %}
    </article>
</div>
<!--art-widget-->
{% if pageCMS['bottom-article'] and pageCMS['bottom-article'].simple_article %}
    {% for item in pageCMS['bottom-article'].simple_article %}
        <section class="w-full bg-ams-base xmed:pb-16">
            <div class="max-w-7xl mx-auto px-6 py-6 xmed:py-0">
                {% for img in item.image %}
                    {{ global_image(img.global_image) }}
                {% endfor %}
                <article class="relative bg-ams-white shadow-md xmed:mx-30 xmed:-mt-16 p-4 xmed:p-16 xmed:text-center ">
                    <header class="title-display text-2xl xmed:text-4xl">
                        {{item.title}}
                    </header>
                    <div class="font-sans text-base xmed:text-lg pb-4 xmed:py-10 text-ams-primary cms-description">
                        {{item.description | safe}}
                    </div>
                    <nav class="py-4 xmed:pb-0 ">
                        {% if item.links %}
                            {% for cta in item.links %}
                                {% set action = cta.action %}
                                <a href="{{action.url}}" class="segment__cta segment__cta--gold relative text-ams-gold font-serif-display text-xs xmed:text-lg uppercase">{{action.copy}}</a>
                            {% endfor %}
                        {% endif %}
                    </nav>
                </article>
            </div>
        </section>
    {% endfor %}
{% endif %}
<!--art-widget end-->

<!--press widget-->
{% if pageCMS['press-widget'] and pageCMS['press-widget'].simple_article %}
    {% for art in pageCMS['press-widget'].simple_article %}
        <section class="w-full bg-pattern--ams-grey py-6 xmed:py-20 z-10">
            <div class="max-w-7xl mx-auto px-6">
                <article class="py-6 xmed:py-8 bg-ams-white shadow-md">
                    <div class="max-w-4xl mx-auto px-4 xmed:px-12 xmed:text-center">
                        <div class="xmed:px-8 pb-4 text-base text-ams-primary xmed:text-lg">{{art.description | safe}}</div>
                        {% if art.links %}
                            {% for link in art.links %}
                                {% set cta = link.action %}
                                {% if cta.type == 'author' %}
                                    <a href="{{cta.url}}" target="_blank">
                                        <p class="text-ams-cyan font-semibold underline">{{cta.copy}}</p>
                                    </a>
                                {% endif %}
                                {% if cta.type == 'primary' %}
                                    <nav class="mt-8">
                                        <a href="{{cta.url}}" class="segment__cta segment__cta--gold relative text-ams-gold font-serif-display text-xs xmed:text-lg uppercase">{{cta.copy}}</a>
                                    </nav>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    </div>
                </article>
            </div>
        </section>
    {% endfor %}
{% endif %}
{% if pageCMS['press-carousel'] and pageCMS['press-carousel'].simple_article %}
    {% set item = pageCMS['press-carousel'].simple_article %}
    <div class="grid auto-cols-fr justify-items-center w-full py-0 xmed:py-8 bg-ams-base">
        <article class="w-full max-w-screen-lg p-6 xmed:p-8 bg-ams-taupe overflow-hidden">
            <section>
                {{  press_carousel(item, "bg-ams-white") }}
            </section>
        </article>
    </div>
{% endif %}
{% if globalCMS['join-the-a-list'] and globalCMS['join-the-a-list'].form %}
    {% set subfooter_form = globalCMS['join-the-a-list'].form%}
    {{subfooter__form(subfooter_form)}}
{% endif %}
<div class="bg-ams-primary w-full">
    <div class="bg-pattern--ams-grey w-full h-20 my-4 hidden xmed:block"></div>
</div>
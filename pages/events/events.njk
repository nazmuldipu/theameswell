---
layout: base.njk
pagename: events
meta_title: Silicon Valley Event Venue | The Ameswell Hotel | Mountain View
meta_description: "Located on 11 scenic acres in Mountain View with over 15,000 sq. ft. of indoor and outdoor event space, The Ameswell Hotel offers endless opportunities to create memorable meetings and events."
canonical_href: https://www.theameswellhotel.com/events.html
permalink: "build/events/index.html"
permalinkBypassOutputDir: true
fabUrl: "rfp.html"
fabBg: "857550"
fabCopy:
    - Plan
    - Event
---
{% from "icons.njk" import svgicon %}
{% from "videos.njk" import lazyvideo %}
{% from "media-carousel.njk" import  media_carousel %}
{% from "svgicon.njk" import svg_icon %}
{% from "macros.njk" import scaled_image %}
{% from "global-image.njk" import global_image %}
{% macro events(item) %}
    <article class="bg-ams-white shadow-sm mb-6 xmed:mb-0">
        {% if item.image.global_image %}
            <figure>
                {{ global_image(item.image.global_image) }}
            </figure>
        {% endif %}
        <figcaption class="my-4 xmed:my-6 px-6">
            {% if item.title %}
                <h2 class="title-display pb-4 text-2xl xmed:text-3xl">
                    {{ item.title | safe }}
                </h2>
            {% endif %}
            {% if item.description %}
                <div class="font-sans text-base xmed:text-lg">
                    {{ item.description | safe }}
                </div>
            {% endif %}
        </figcaption>
    </article>   
{% endmacro %}

{# Top Banner Image #}
{% if pageCMS['top-banner'] and pageCMS['top-banner'].simple_article %}
    <section id="pageHero" class="bg-ams-primary h-screen w-full grid grid-rows-1 justify-items-center items-center overflow-hidden">
        
        {% for item in pageCMS['top-banner'].simple_article %}
            {% set top_banner_image = item.image %}
            
            {% for img in top_banner_image %}
                {{ global_image(img.global_image, imgClass = "min-h-screen min-w-full max-w-none") }}
            {% endfor %}

        {% endfor %}
        
    </section>
{% endif %}

{# Top Banner Title and Description #}
{% if pageCMS['top-banner'] and pageCMS['top-banner'].simple_article %}
    {% set top_banner_article = pageCMS['top-banner'].simple_article %}
    {% for item in top_banner_article %}
        <div class="w-full grid justify-items-center -mt-24 xmed:-mt-32 pt-8 xmed:pt-16 px-6 pb-12 xmed:pb-36 bg-pattern--ams-grey">
            <article class="w-full grid justify-items-center">
                <section class="w-full grid justify-items-center max-w-screen-lg">
                    <div class="pb-4 px-4 xmed:shadow-md xmed:-mt-10 xmed:p-8 bg-ams-white">
                        {% if item.title %}
                            <h2 class="title-display text-3xl xmed:text-5xl pt-4 xmed:pt-0 pb-4 xmed:text-center">
                                {{ item.title | safe }}
                            </h2>
                        {% endif %}

                        {% if item.description %}
                            <div class="text-base xmed:text-lg xmed:text-center">
                                {{ item.description | safe }}
                            </div>
                        {% endif %}
                        
                        <ul class="grid grid-cols-3 text-ams-primary title-display text-2xl xmed:text-3xl font-medium gap-y-8 justify-items-center text-center pt-8 xmed:mx-16">
                            {% for link in item.links %}
                                {% set trg = '_blank' if not link.action.internal else '_self' %}
                                <li><a class="border-b border-ams-primary" target="{{trg}}" href="{{link.action.url}}">{{link.action.copy}}</a></li>
                            {% endfor %}                
                        </ul>
                    </div>
                </section>
            </article>
        </div>
    {% endfor %}
{% endif %}

{# Resort amenities Icons #}
{% if pageCMS['icons'] and pageCMS['icons'].icon_list 
    and pageCMS['icons'].icon_list.icons %}
    {% set icon_list = pageCMS['icons'].icon_list%}

    <div class="grid justify-items-center w-full bg-ams-grey">
        <article class="max-w-screen-xl w-full grid justify-items-center p-6">
            <section class="w-full grid pb-4 px-4 xmed:my-8 xmed:p-8 bg-ams-white xmed:shadow-md">
                {% if icon_list.title %}
                     <h2 class="title-display text-2xl xmed:text-4xl pt-4 xmed:pt-0 pb-4 xmed:pb-8 xmed:text-center">
                        {{ icon_list.title | safe }}
                    </h2>
                {% endif %}
               
                <ul class="xmed:grid xmed:grid-cols-4 xmed:gap-4 text-ams-primary">
                    {% for data in icon_list.icons %}
                        <li class="{% if data.class %} {{data.class}} {% endif %}">
                            <div class="grid xmed:grid-cols-1 xmed:justify-items-center content-start mb-2 xmed:text-center grid-cols-sm-auto gap-4 xmed:px-8">
                                {{data.icon | safe}}
                                <a>
                                    <span>{{ data.title }}</span>
                                </a>
                            </div>
                        </li>
                    {% endfor %}             
                </ul>   
                
                <div class="text-center xmed:hidden mt-4 xmed:mt-0">
                    {% if icon_list.action_copy %}
                        <a class="show-all__amenities inline-block py-3 px-12 bg-ams-gold text-ams-white font-serif text-lg tracking-wide button--primary button focus:outline-none xmed:px-8">{{ icon_list.action_copy | safe }}</a>
                    {% endif %}
                </div>
            </section>
        </article>
    </div>
{% endif %}

{# Horizontal Cards #}
{% if pageCMS['horizontal-cards'] and pageCMS['horizontal-cards'].cards
    and pageCMS['horizontal-cards'].cards.card %}
    {% set horizontal_cards = pageCMS['horizontal-cards'].cards.card %}
    
    {% for item in horizontal_cards %}
        <section class="event grid justify-items-center w-full bg-ams-base
        {% if loop.last %}
            pb-10 xmed:pb-14
        {% endif %}}
        ">
            <article class="max-w-screen-xl mx-auto">
                <section class="grid xmed:event__grid-cols items-center gap-x-8
                    {% if loop.first %}
                        pt-0 xmed:pt-10
                    {% else %}
                        pt-10    
                    {% endif %}">

                    {% if item.image.global_image %}
                        <figure class="event__image xmed:px-4">
                            {{ global_image(item.image.global_image) }}
                        </figure>
                    {% endif %}
                    
                    <figcaption class="event__description mt-8 xmed:mt-0 px-6">
                        {% if item.title %}
                            <h2 class="title-display pb-4 text-3xl xmed:text-4xl">
                                {{ item.title | safe }}
                            </h2>
                        {% endif %}

                        {% if item.description %}
                            <p>
                                {{ item.description | safe}}
                            </p>
                        {% endif %}                        
                    </figcaption>
                </section>
            </article>
        </section>
    {% endfor %}
{% endif %}

{# Vertical Cards #}
{% if pageCMS['vertical-cards'] and pageCMS['vertical-cards'].cards and pageCMS['vertical-cards'].cards.card %} 
{% set vertical_cards = pageCMS['vertical-cards'].cards.card %}

<section class="w-full text-center font-serif font-medium text-xl xmed:text-2.5xl text-ams-primary bg-ams-base xmed:pb-12">
    <input type="radio" id="tab--1" class="tab--1 tab__radio" name="tab__radio" checked>
    <label for="tab--1" class="tab__label">All</label>

    <input type="radio" id="tab--3" class="tab--3 tab__radio" name="tab__radio">
    <label for="tab--3" class="tab__label ml-2">Outdoor</label> 

    <input type="radio" id="tab--2" class="tab--2 tab__radio" name="tab__radio">
    <label for="tab--2" class="tab__label ml-2">Indoor</label>

    <div class="tab__containers">            
        <section class="all text-left">
            <section class="grid xmed:grid-cols-2 xmed:gap-8 justify-items-center max-w-screen-xl mx-auto pt-4 xmed:pt-8 px-6 xmed:px-4">
                {% for item in vertical_cards %}
                    {{ events(item)}}
                {% endfor %}
            </section>                    
        </section>                   
        <section class="outdoor text-left">
            <section class="grid xmed:grid-cols-2 xmed:gap-8 justify-items-center max-w-screen-xl mx-auto pt-4 xmed:pt-8 px-6 xmed:px-4">
                {% for item in vertical_cards %}
                    {% if item.category == 'outdoor' %}
                        {{ events(item)}}
                    {% endif %}
                {% endfor %}  
            </section>                  
        </section>
        <section class="indoor text-left">
            <section class="grid xmed:grid-cols-2 xmed:gap-8 justify-items-center max-w-screen-xl mx-auto pt-4 xmed:pt-8 px-6 xmed:px-4">
                {% for item in vertical_cards %}
                    {% if item.category == 'indoor' %}
                        {{ events(item)}}
                    {% endif %}
                {% endfor %} 
            </section>
        </section>        
    </div>
</section>

{% endif %}

{# Action Card #}
{% if pageCMS['action-card'] and pageCMS['action-card'].action_card %}
    {% set action_card = pageCMS['action-card'].action_card %}
    <section class="grid w-full mb-10 xmed:mb-0 p-6 xmed:py-11 bg-ams-gold">
        <section class="max-w-screen-xl mx-auto w-full">
            <article class="text-center pt-12 xmed:pt-9 pb-6 xmed:pb-10 xmed:mx-4 bg-ams-white shadow-md">
                    {% if action_card.title %}
                        <h2 class="px-12 pb-5 xmed:pb-8 font-serif text-2xl xmed:text-4xl text-ams-taupe">{{ action_card.title | safe }}</h2>
                    {% endif %}
                    
                    {% if action_card.action.simple_action %}
                        {% set cta = action_card.action.simple_action %}
                        {% set trg = '_blank' if not cta.internal else '_self' %}
                        <div class="text-center">
                            <a class="inline-block py-3 px-12 bg-ams-gold text-ams-white font-serif text-xl xmed:text-lg tracking-wide button--primary button focus:outline-none xmed:px-8" target="{{trg}}" href="{{cta.href}}">{{ cta.copy | safe }}</a>
                        </div>
                    {% endif %}
                    
            </article>
        </section>
    </section>
{% endif %}


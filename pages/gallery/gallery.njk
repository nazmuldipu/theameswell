{% from "macros.njk" import scaled_image %}
<div id="pageHero" class="bg-ams-taupe w-full justify-items-center pt-20 overflow-hidden">
</div>
<section class="segment-outer bg-ams-taupe pb-2 px-7 xmed:px-14">
    <article class="segment-inner">
        <figure class="gallery gallery-image__column">
            {% for image in gallery_images %}
                {% set defaultHref = image.artDirection|first %}
               <div href="{{defaultHref.src}}.jpg" class="cursor-pointer pb-6 xmed:pb-8" >
                    {{ scaled_image(image) }}
               </div>
            {% endfor %}            
        </figure>
    </article>
</section>